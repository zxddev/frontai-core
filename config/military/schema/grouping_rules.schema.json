{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Grouping Rules Schema",
  "type": "object",
  "required": ["version", "updated_at", "grouping_rules"],
  "properties": {
    "version": { "type": "string" },
    "updated_at": { "type": "string" },
    "grouping_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "pattern", "definition", "roles", "features", "scenes"],
        "properties": {
          "id": { "type": "string", "pattern": "^GROUP-\\d{3}$" },
          "pattern": { "type": "string" },
          "definition": { "type": "string" },
          "roles": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "features": { "type": "string" },
          "scenes": {
            "type": "array",
            "items": { "type": "string", "pattern": "^S[1-4]$" },
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
