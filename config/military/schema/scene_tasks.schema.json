{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scene Tasks Schema",
  "type": "object",
  "required": ["version", "updated_at", "scenes"],
  "properties": {
    "version": { "type": "string" },
    "updated_at": { "type": "string" },
    "source": { "type": "string" },
    "scenes": {
      "type": "object",
      "patternProperties": {
        "^S[1-4]$": {
          "type": "object",
          "required": ["name", "initial_tasks", "tactical_preferences", "evidence"],
          "properties": {
            "name": { "type": "string" },
            "initial_tasks": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            },
            "tactical_preferences": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            },
            "evidence": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
