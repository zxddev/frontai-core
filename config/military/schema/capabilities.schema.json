{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capabilities Schema",
  "type": "object",
  "required": ["version", "updated_at", "metrics", "constraints"],
  "properties": {
    "version": { "type": "string" },
    "updated_at": { "type": "string" },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "target", "unit", "constraints"],
        "properties": {
          "id": { "type": "string", "pattern": "^S\\d-M\\d{1,2}$" },
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["KPP", "KSA"] },
          "target": { "type": "string" },
          "unit": { "type": "string" },
          "constraints": {
            "type": "array",
            "items": { "type": "string", "pattern": "^S\\d-CON\\d{1,2}$" }
          }
        },
        "additionalProperties": false
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "description", "priority"],
        "properties": {
          "id": { "type": "string", "pattern": "^S\\d-CON\\d{1,2}$" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "priority": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
