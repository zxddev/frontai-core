{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TRR Rules Schema",
  "type": "object",
  "required": ["version", "updated_at", "rules"],
  "properties": {
    "version": { "type": "string" },
    "updated_at": { "type": "string" },
    "source": { "type": "string" },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "if", "then", "description"],
        "properties": {
          "id": { "type": "string", "pattern": "^TRR-001-\\d{3}$" },
          "name": { "type": "string" },
          "if": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "then": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
